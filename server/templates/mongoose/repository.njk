    return this.{{ model.nameCamel }}Model
      .find()
      .skip(skip)
      .limit(limit)
      .sort({ createdAt: -1 }) // Most recent first
      .lean()
      .exec();
  }

  async findById(id: string): Promise<{{ model.name }} | null> {
    return this.{{ model.nameCamel }}Model.findById(id).lean().exec();
  }

  async update(id: string, data: Partial<{{ model.name }}>): Promise<{{ model.name }} | null> {
    return this.{{ model.nameCamel }}Model
      .findByIdAndUpdate(id, data, { new: true })
      .lean()
      .exec();
  }

  async delete(id: string): Promise<{{ model.name }} | null> {
    return this.{{ model.nameCamel }}Model.findByIdAndDelete(id).lean().exec();
  }

  async count(): Promise<number> {
    return this.{{ model.nameCamel }}Model.countDocuments().exec();
  }

