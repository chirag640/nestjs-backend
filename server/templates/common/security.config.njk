      status: 'error',
      statusCode: 429,
      error: {
        code: 'RATE_8001',
        message: 'Too many requests from this IP, please try again later',
      },
    },
  },
};

/**
 * Get security config for environment
 */
export function getSecurityConfig(env: 'development' | 'production' | 'test' = 'development') {
  const config = { ...securityConfig };

  if (env === 'development') {
    // Relax some settings for development
    config.cors.origin = '*';
    config.helmet.contentSecurityPolicy = false as any;
  }

  if (env === 'production') {
    // Ensure strict settings in production
    config.cookie.secure = true;
  }

  return config;
}
