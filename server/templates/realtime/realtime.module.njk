import { Module } from '@nestjs/common';
{% if auth and auth.enabled %}
import { JwtModule } from '@nestjs/jwt';
import { ConfigModule, ConfigService } from '@nestjs/config';
{% endif %}
import { AppGateway } from './app.gateway';

/**
 * Real-time WebSocket Module
 * 
 * Provides:
 * - WebSocket gateway with Socket.io
 * - JWT authentication for connections
 * - Room-based subscriptions
 {% if realtime.presence %}- Presence tracking (online/offline){% endif %}
 {% if realtime.scaling === 'redis' %}- Redis adapter for horizontal scaling{% endif %}
 */
@Module({
  imports: [
{% if auth and auth.enabled %}
    JwtModule.registerAsync({
      imports: [ConfigModule],
      inject: [ConfigService],
      useFactory: (configService: ConfigService) => ({
        secret: configService.get<string>('JWT_SECRET'),
        signOptions: { expiresIn: configService.get<string>('JWT_ACCESS_TTL', '15m') },
      }),
    }),
{% endif %}
  ],
  providers: [AppGateway],
  exports: [AppGateway],
})
export class RealtimeModule {}
