import { Injectable, UnauthorizedException{% if features.cache %}, Inject{% endif %} } from '@nestjs/common';
import { PassportStrategy } from '@nestjs/passport';
import { ExtractJwt, Strategy } from 'passport-jwt';
import { ConfigService } from '@nestjs/config';
{% if features.cache %}
import { CACHE_MANAGER } from '@nestjs/cache-manager';
import { Cache } from 'cache-manager';
import { Request } from 'express';
{% endif %}

@Injectable()
export class JwtStrategy extends PassportStrategy(Strategy) {
  constructor(
    private configService: ConfigService,
    {% if features.cache %}@Inject(CACHE_MANAGER) private cacheManager: Cache,{% endif %}
  ) {
    const secret = configService.get<string>('JWT_SECRET');
    if (!secret) {
      throw new Error(
        'JWT_SECRET is not defined in environment variables. ' +
        'Application startup failed. Please set JWT_SECRET in your .env file.'
      );
    }

    super({
      jwtFromRequest: ExtractJwt.fromAuthHeaderAsBearerToken(),
      ignoreExpiration: false,
      secretOrKey: secret,
      {% if features.cache %}passReqToCallback: true,{% endif %}
    });
  }

  async validate({% if features.cache %}req: Request, {% endif %}payload: any) {
    if (!payload || !payload.sub) {
      throw new UnauthorizedException();
    }

    {% if features.cache %}
    // Check if token is blacklisted (logged out)
    const token = ExtractJwt.fromAuthHeaderAsBearerToken()(req);
    if (token) {
      const isBlacklisted = await this.cacheManager.get(`blacklist:${token}`);
      if (isBlacklisted) {
        throw new UnauthorizedException('Token has been revoked');
      }
    }
    {% endif %}

    return {
      userId: payload.sub,
      roles: payload.roles || [],
    };
  }
}
