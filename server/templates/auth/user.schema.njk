import { Prop, Schema, SchemaFactory } from '@nestjs/mongoose';
import { Document } from 'mongoose';

export type UserDocument = User & Document;

@Schema({ timestamps: true })
export class User {
  @Prop({ required: true, unique: true })
  email: string;

  @Prop({ 
    {% if oauth and oauth.enabled %}
    required: function(this: User) { 
      // Password not required for OAuth users
      return !this.oauthProvider; 
    }
    {% else %}
    required: true
    {% endif %}
  })
  password: string;

  @Prop({ required: true })
  firstName: string;

  @Prop({ required: true })
  lastName: string;

  @Prop({ type: [String], default: ['User'] })
  roles: string[];

  {% if auth.jwt.blacklist %}
  @Prop({ type: String, default: null })
  refreshToken: string | null;
  {% endif %}

  {% if oauth and oauth.enabled %}
  @Prop({ type: String, default: null })
  oauthProvider: string | null; // 'google' | 'github' | null

  @Prop({ type: String, default: null })
  oauthId: string | null; // OAuth provider's user ID
  {% endif %}
}

export const UserSchema = SchemaFactory.createForClass(User);

// Indexes for common queries
UserSchema.index({ email: 1 }, { unique: true }); // Already enforced by unique constraint
UserSchema.index({ roles: 1 }); // For role-based queries
UserSchema.index({ createdAt: -1 }); // For sorting by creation date
{% if oauth and oauth.enabled %}
UserSchema.index({ oauthProvider: 1, oauthId: 1 }, { unique: true, sparse: true }); // For OAuth lookups
{% endif %}
