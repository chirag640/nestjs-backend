import * as bcrypt from 'bcryptjs';

/**
 * Database Seeding Script
 * 
 * This script seeds the database with initial data including:
 * - Admin user with default credentials
 * - Sample data for all models (auto-generated)
 * 
 * Usage:
 *   npm run seed          # Run seeding
 *   npm run seed:reset    # Drop database and reseed
 *   SEED_COUNT=100 npm run seed  # Seed with custom count
 * 
 * ‚ö†Ô∏è WARNING: Only run this in development/staging environments!
 */

async function seed() {
  console.log('üå± Starting database seeding...\\n');

  const app = await NestFactory.createApplicationContext(AppModule, {
    logger: ['error', 'warn', 'log'],
  });

  try {
{% if database.type === 'MongoDB' %}
    const connection = app.get<Connection>(getConnectionToken());
    
    // Check if seeding has already been done
    const userCount = await connection.collection('users').countDocuments();
    if (userCount > 0) {
      console.log('‚ö†Ô∏è  Database already contains data. Use --force to override.');
      console.log(`   Current user count: ${userCount}`);
      
      if (!process.argv.includes('--force')) {
        console.log('   Skipping seed. Add --force flag to reseed anyway.');
        await app.close();
        return;
      }
      
      console.log('   --force detected. Clearing existing data...\\n');
      // Clear all collections
{% for seedModel in seeding.models %}
      await connection.collection('{{ seedModel.modelName | lower }}s').deleteMany({});
{% endfor %}
    }

    // Seed admin user
    console.log('üë§ Creating admin user...');
    const adminPassword = process.env.ADMIN_PASSWORD || 'Admin@123456';
    const hashedPassword = await bcrypt.hash(adminPassword, 10);
    
    const adminUser = {
      email: process.env.ADMIN_EMAIL || 'admin@{{ project.name | lower }}.com',
      password: hashedPassword,
      name: 'System Administrator',
{% if auth.roles and auth.roles.length > 0 %}
      role: '{{ auth.roles[0] }}', // First role is typically admin
{% endif %}
      emailVerified: true,
      emailVerificationToken: null,
      emailVerificationExpiry: null,
      passwordResetToken: null,
      passwordResetExpiry: null,
      refreshTokenVersion: 0,
      failedLoginAttempts: 0,
      accountLockedUntil: null,
      lastLoginAt: null,
      createdAt: new Date(),
      updatedAt: new Date(),
    };
    
    await connection.collection('users').insertOne(adminUser);
    console.log('‚úÖ Admin user created successfully');
    console.log(`   Email: ${adminUser.email}`);
    console.log(`   Password: ${adminPassword}`);
    console.log(`   ‚ö†Ô∏è  CHANGE THIS PASSWORD IN PRODUCTION!\\n`);

{% if seeding.models and seeding.models.length > 0 %}
    // Seed sample data (auto-generated)
    console.log('üìä Seeding sample data for all models...\\n');
    
    const seedCount = parseInt(process.env.SEED_COUNT || '{{ seeding.models[0].count }}', 10);
    
    // Store created IDs for relationships
    const createdIds = new Map<string, any[]>();

{% for seedModel in seeding.models %}
    // Seed {{ seedModel.modelName }} (order: {{ seedModel.order }})
    console.log('üìù Seeding {{ seedModel.modelName }}...');
    const {{ seedModel.modelName | lower }}s: any[] = [];
    
    for (let i = 0; i < seedCount; i++) {
      const record{{ seedModel.modelName }} = {
{% for field in seedModel.fields %}
        {{ field.fieldName }}: {{ field.generator }},
{% endfor %}
{% for rel in seedModel.relationships %}
{% if rel.type === 'one' %}
        // Relationship: {{ rel.fieldName }} -> {{ rel.targetModel }}
        {{ rel.fieldName }}: createdIds.get('{{ rel.targetModel }}') 
          ? createdIds.get('{{ rel.targetModel }}')[Math.floor(Math.random() * createdIds.get('{{ rel.targetModel }}').length)]
          : null,
{% elif rel.type === 'array' %}
        // Relationship: {{ rel.fieldName }} -> {{ rel.targetModel }}[] (Many-to-Many)
        {{ rel.fieldName }}: createdIds.get('{{ rel.targetModel }}')
          ? createdIds.get('{{ rel.targetModel }}').slice(0, Math.floor(Math.random() * 5) + 1)
          : [],
{% endif %}
{% endfor %}
        createdAt: new Date(),
        updatedAt: new Date(),
      };
      
      {{ seedModel.modelName | lower }}s.push(record{{ seedModel.modelName }});
    }
    
    const inserted{{ seedModel.modelName }} = await connection
      .collection('{{ seedModel.modelName | lower }}s')
      .insertMany({{ seedModel.modelName | lower }}s);
    
    createdIds.set('{{ seedModel.modelName }}', Object.values(inserted{{ seedModel.modelName }}.insertedIds));
    console.log(`‚úÖ Seeded ${seedCount} {{ seedModel.modelName }}s`);
    
{% endfor %}
    console.log('\\n‚úÖ All sample data seeded successfully!');
{% endif %}

{% elif database.type === 'PostgreSQL' or database.type === 'MySQL' %}
