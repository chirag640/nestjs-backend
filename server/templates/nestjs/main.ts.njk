import { NestFactory } from '@nestjs/core';
import { AppModule } from './app.module';
{% if features.validation %}import { ValidationPipe } from '@nestjs/common';{% endif %}
{% if features.logging %}import { Logger } from '@nestjs/common';{% endif %}
{% if features.helmet %}import helmet from 'helmet';{% endif %}
{% if features.compression %}import * as compression from 'compression';{% endif %}

async function bootstrap() {
{% if auth and auth.enabled %}
  // Critical: Validate JWT_SECRET is set before starting the application
  if (!process.env.JWT_SECRET) {
    throw new Error(
      '‚ùå FATAL: JWT_SECRET environment variable is not set!\n' +
      'Application cannot start without JWT_SECRET.\n' +
      'Please set JWT_SECRET in your .env file to a strong secret (minimum 32 characters).\n' +
      'Generate one with: node -e "console.log(require(\'crypto\').randomBytes(32).toString(\'hex\'))"'
    );
  }
  if (process.env.JWT_SECRET.length < 32) {
    {% if features.logging %}const logger = new Logger('Bootstrap');{% endif %}
    {% if features.logging %}logger.warn('‚ö†Ô∏è  WARNING: JWT_SECRET is shorter than 32 characters. Consider using a longer secret for better security.');{% else %}console.warn('‚ö†Ô∏è  WARNING: JWT_SECRET is shorter than 32 characters. Consider using a longer secret for better security.');{% endif %}
  }
{% endif %}

  const app = await NestFactory.create(AppModule{% if features.logging %}, {
    logger: ['error', 'warn', 'log', 'debug', 'verbose'],
  }{% endif %});
  
  {% if features.helmet %}
  // Security: HTTP headers protection
  app.use(helmet());
  {% endif %}

  {% if features.compression %}
  // Performance: Gzip compression
  app.use(compression());
  {% endif %}

  {% if features.cors %}
  // Enable CORS for cross-origin requests
  app.enableCors();
  {% endif %}

  {% if features.validation %}
  // Enable validation globally with DTO decorators
  app.useGlobalPipes(new ValidationPipe({
    whitelist: true,
    forbidNonWhitelisted: true,
    transform: true,
  }));
  {% endif %}

  const port = process.env.PORT || 3000;
  await app.listen(port);
  
  {% if features.logging %}
  const logger = new Logger('Bootstrap');
  logger.log(`üöÄ Application is running on: http://localhost:${port}`);
  {% else %}
  console.log(`üöÄ Application is running on: http://localhost:${port}`);
  {% endif %}
}

bootstrap();
