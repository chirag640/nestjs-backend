import { Module } from '@nestjs/common';
import { ConfigModule } from '@nestjs/config';
{% if database.type === 'MongoDB' %}
import { MongooseModule } from '@nestjs/mongoose';
{% else %}
import { TypeOrmModule } from '@nestjs/typeorm';
{% endif %}
import { AppController } from './app.controller';
import { AppService } from './app.service';
{% if auth and auth.enabled %}
import { AuthModule } from './modules/auth/auth.module';
{% endif %}
{% if features.logging %}
import { LoggerModule } from './modules/logger/logger.module';
{% endif %}
{% if features.caching %}
import { CacheModule } from './modules/cache/cache.module';
{% endif %}
{% if features.health %}
import { HealthModule } from './modules/health/health.module';
{% endif %}
{% if features.rateLimit %}
import { ThrottlerModule } from './modules/throttler/throttler.module';
{% endif %}
{% if features.queues %}
import { QueueModule } from './modules/queue/queue.module';
{% endif %}
{% if features.s3Upload %}
import { S3LifecycleModule } from './modules/s3-lifecycle/s3-lifecycle.module';
{% endif %}
import { EncryptionModule } from './common/encryption.module';
{% if models and models.length > 0 %}
// Generated model modules
{% for model in models %}
import { {{ model.name }}Module } from './modules/{{ model.nameKebab }}/{{ model.fileName }}.module';
{% endfor %}
{% endif %}

@Module({
  imports: [
    ConfigModule.forRoot({
      isGlobal: true,
    }),
{% if database.type === 'MongoDB' %}
    MongooseModule.forRoot(process.env.DATABASE_URL!, {
      // Production-ready connection pool configuration
      maxPoolSize: 10, // Maximum number of connections in the pool
      minPoolSize: 2, // Minimum number of connections to maintain
      socketTimeoutMS: 45000, // Close sockets after 45 seconds of inactivity
      serverSelectionTimeoutMS: 5000, // Timeout after 5s if no server available
      heartbeatFrequencyMS: 10000, // Check server health every 10s
      retryWrites: true, // Automatically retry write operations
      retryReads: true, // Automatically retry read operations
    }),
{% else %}
    TypeOrmModule.forRoot({
      type: '{{ database.type | lower }}',
      url: process.env.DATABASE_URL || '{{ database.connectionString }}',
      autoLoadEntities: true,
      synchronize: {{ database.autoMigration === 'push' }},
    }),
{% endif %}
{% if features.logging %}
    LoggerModule,
{% endif %}
{% if features.caching %}
    CacheModule,
{% endif %}
{% if features.health %}
    HealthModule,
{% endif %}
{% if features.rateLimit %}
    ThrottlerModule,
{% endif %}
{% if features.queues %}
    QueueModule,
{% endif %}
{% if features.s3Upload %}
    S3LifecycleModule,
{% endif %}
    EncryptionModule, // Global encryption layer (KMS + AES-GCM)
{% if auth and auth.enabled %}
    AuthModule,
{% endif %}
{% if models and models.length > 0 %}
    // Generated modules
    {% for model in models %}{{ model.name }}Module,
    {% endfor %}
{% endif %}
  ],
  controllers: [AppController],
  providers: [AppService],
})
export class AppModule {}
