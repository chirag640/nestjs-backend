import { Module } from '@nestjs/common';
import { ConfigModule } from '@nestjs/config';
{% if database.type === 'MongoDB' %}
import { MongooseModule } from '@nestjs/mongoose';
{% else %}
import { TypeOrmModule } from '@nestjs/typeorm';
{% endif %}
import { AppController } from './app.controller';
import { AppService } from './app.service';
{% if auth and auth.enabled %}
import { AuthModule } from './modules/auth/auth.module';
{% endif %}
{% if features.logging %}
import { LoggerModule } from './modules/logger/logger.module';
{% endif %}
{% if features.caching %}
import { CacheModule } from './modules/cache/cache.module';
{% endif %}
{% if features.health %}
import { HealthModule } from './modules/health/health.module';
{% endif %}
{% if features.rateLimit %}
import { ThrottlerModule } from './modules/throttler/throttler.module';
{% endif %}
{% if models and models.length > 0 %}
// Generated model modules
{% for model in models %}
import { {{ model.name }}Module } from './modules/{{ model.nameKebab }}/{{ model.fileName }}.module';
{% endfor %}
{% endif %}

@Module({
  imports: [
    ConfigModule.forRoot({
      isGlobal: true,
    }),
{% if database.type === 'MongoDB' %}
    MongooseModule.forRoot(process.env.DATABASE_URL),
{% else %}
    TypeOrmModule.forRoot({
      type: '{{ database.type | lower }}',
      url: process.env.DATABASE_URL || '{{ database.connectionString }}',
      autoLoadEntities: true,
      synchronize: {{ database.autoMigration === 'push' }},
    }),
{% endif %}
{% if features.logging %}
    LoggerModule,
{% endif %}
{% if features.caching %}
    CacheModule,
{% endif %}
{% if features.health %}
    HealthModule,
{% endif %}
{% if features.rateLimit %}
    ThrottlerModule,
{% endif %}
{% if auth and auth.enabled %}
    AuthModule,
{% endif %}
{% if models and models.length > 0 %}
    // Generated modules
    {% for model in models %}{{ model.name }}Module,
    {% endfor %}
{% endif %}
  ],
  controllers: [AppController],
  providers: [AppService],
})
export class AppModule {}
