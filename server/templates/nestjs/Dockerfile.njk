# Build stage
# Builder stage
FROM node:{{ project.nodeVersion }}-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./
{% if project.packageManager === 'pnpm' %}
RUN npm install -g pnpm
RUN pnpm install --frozen-lockfile
{% elif project.packageManager === 'yarn' %}
COPY yarn.lock ./
RUN yarn install --frozen-lockfile
{% else %}
RUN npm ci
{% endif %}

# Copy source code
COPY . .

# Build application
{% if project.packageManager === 'pnpm' %}
RUN pnpm run build
{% elif project.packageManager === 'yarn' %}
RUN yarn build
{% else %}
RUN npm run build
{% endif %}

# Production stage
FROM node:{{ project.nodeVersion }}-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
{% if project.packageManager === 'pnpm' %}
RUN npm install -g pnpm
RUN pnpm install --prod --frozen-lockfile
{% elif project.packageManager === 'yarn' %}
COPY yarn.lock ./
RUN yarn install --prod --frozen-lockfile
{% else %}
RUN npm ci --only=production
{% endif %}

# Copy built application
COPY --from=builder /app/dist ./dist

# Expose port
EXPOSE 3000

# Start application
CMD ["node", "dist/main"]
