# {{ project.name }} - Railway Deployment

# railway.toml - Railway deployment configuration
# https://docs.railway.app/reference/config-as-code

[build]
builder = "NIXPACKS"
buildCommand = "npm ci && npm run build"

[deploy]
startCommand = "npm run start:prod"
healthcheckPath = "/health/live"
healthcheckTimeout = 300
restartPolicyType = "ON_FAILURE"
restartPolicyMaxRetries = 10

# Environment variables are set via Railway dashboard
# Required variables:
# - DATABASE_URL (auto-injected if using Railway Postgres/MySQL)
# - MONGODB_URI (for MongoDB - use external provider)
# - JWT_SECRET
# - JWT_REFRESH_SECRET
# - REDIS_URL (auto-injected if using Railway Redis)
