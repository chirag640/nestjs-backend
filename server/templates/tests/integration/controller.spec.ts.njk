import { Test, TestingModule } from '@nestjs/testing';
import { INestApplication, ValidationPipe } from '@nestjs/common';
import * as request from 'supertest';
import { {{ model.name }}Controller } from './{{ model.fileName }}.controller';
import { {{ model.name }}Service } from './{{ model.fileName }}.service';
import { JwtAuthGuard } from '../auth/guards/jwt-auth.guard';
import { RolesGuard } from '../auth/rbac/roles.guard';

/**
 * Integration tests for {{ model.name }}Controller
 * 
 * Tests HTTP endpoints with mocked service layer.
 * Run with: npm run test -- --testPathPattern={{ model.fileName }}.controller.spec
 */
describe('{{ model.name }}Controller (Integration)', () => {
  let app: INestApplication;
  let service: jest.Mocked<{{ model.name }}Service>;

  const mock{{ model.name }} = {
    id: '507f1f77bcf86cd799439011',
    {% for field in model.fields %}
    {{ field.name }}: {{ field.example | safe }},
    {% endfor %}
    createdAt: new Date().toISOString(),
    updatedAt: new Date().toISOString(),
  };

  beforeAll(async () => {
    const mockService = {
      findAll: jest.fn(),
      findById: jest.fn(),
      create: jest.fn(),
      update: jest.fn(),
      delete: jest.fn(),
    };

    const module: TestingModule = await Test.createTestingModule({
      controllers: [{{ model.name }}Controller],
      providers: [{ provide: {{ model.name }}Service, useValue: mockService }],
    })
      // Mock auth guards for testing
      .overrideGuard(JwtAuthGuard)
      .useValue({ canActivate: () => true })
      .overrideGuard(RolesGuard)
      .useValue({ canActivate: () => true })
      .compile();

    app = module.createNestApplication();
    app.useGlobalPipes(new ValidationPipe({ transform: true, whitelist: true }));
    await app.init();

    service = module.get({{ model.name }}Service);
  });

  afterAll(async () => {
    await app.close();
  });

  afterEach(() => {
    jest.clearAllMocks();
  });

  describe('GET /{{ model.namePluralKebab }}', () => {
    it('should return paginated list', async () => {
      service.findAll.mockResolvedValue({
        items: [mock{{ model.name }}],
        meta: { page: 1, limit: 10, total: 1, totalPages: 1 },
      });

      const response = await request(app.getHttpServer())
        .get('/{{ model.namePluralKebab }}')
        .expect(200);

      expect(response.body.status).toBe('success');
      expect(response.body.data).toBeDefined();
    });

    it('should support pagination params', async () => {
      service.findAll.mockResolvedValue({
        items: [],
        meta: { page: 2, limit: 5, total: 0, totalPages: 0 },
      });

      await request(app.getHttpServer())
        .get('/{{ model.namePluralKebab }}?page=2&limit=5')
        .expect(200);

      expect(service.findAll).toHaveBeenCalledWith(
        expect.objectContaining({ page: 2, limit: 5 })
      );
    });
  });

  describe('GET /{{ model.namePluralKebab }}/:id', () => {
    it('should return single {{ model.nameCamel }}', async () => {
      service.findById.mockResolvedValue(mock{{ model.name }});

      const response = await request(app.getHttpServer())
        .get(`/{{ model.namePluralKebab }}/${mock{{ model.name }}.id}`)
        .expect(200);

      expect(response.body.status).toBe('success');
      expect(response.body.data.id).toBe(mock{{ model.name }}.id);
    });

    it('should return 404 for non-existent {{ model.nameCamel }}', async () => {
      service.findById.mockRejectedValue({ status: 404, message: 'Not found' });

      await request(app.getHttpServer())
        .get('/{{ model.namePluralKebab }}/nonexistent')
        .expect(404);
    });
  });

  describe('POST /{{ model.namePluralKebab }}', () => {
    const createDto = {
      {% for field in model.fields %}{% if field.required %}
      {{ field.name }}: {{ field.example | safe }},
      {% endif %}{% endfor %}
    };

    it('should create new {{ model.nameCamel }}', async () => {
      service.create.mockResolvedValue(mock{{ model.name }});

      const response = await request(app.getHttpServer())
        .post('/{{ model.namePluralKebab }}')
        .send(createDto)
        .expect(201);

      expect(response.body.status).toBe('success');
      expect(service.create).toHaveBeenCalledWith(expect.objectContaining(createDto));
    });

    it('should validate required fields', async () => {
      await request(app.getHttpServer())
        .post('/{{ model.namePluralKebab }}')
        .send({})
        .expect(400);
    });
  });

  describe('PATCH /{{ model.namePluralKebab }}/:id', () => {
    it('should update {{ model.nameCamel }}', async () => {
      service.update.mockResolvedValue(mock{{ model.name }});

      const response = await request(app.getHttpServer())
        .patch(`/{{ model.namePluralKebab }}/${mock{{ model.name }}.id}`)
        .send({ {% if model.fields | length > 0 %}{{ model.fields[0].name }}: {{ model.fields[0].example | safe }}{% endif %} })
        .expect(200);

      expect(response.body.status).toBe('success');
    });
  });

  describe('DELETE /{{ model.namePluralKebab }}/:id', () => {
    it('should delete {{ model.nameCamel }}', async () => {
      service.delete.mockResolvedValue(undefined);

      await request(app.getHttpServer())
        .delete(`/{{ model.namePluralKebab }}/${mock{{ model.name }}.id}`)
        .expect(204);

      expect(service.delete).toHaveBeenCalledWith(mock{{ model.name }}.id);
    });
  });
});
