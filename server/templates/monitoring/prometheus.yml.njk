global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    monitor: '{{ project.name }}-monitor'

scrape_configs:
  - job_name: '{{ project.name }}-api'
    static_configs:
      - targets: ['localhost:3000']  # Change to your API host:port
    metrics_path: '/metrics'
    scheme: http
    # Optional: scrape timeout
    scrape_timeout: 10s
    # Optional: basic auth if metrics endpoint is protected
    # basic_auth:
    #   username: 'admin'
    #   password: 'password'
