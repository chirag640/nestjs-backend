# ================================
# ENCRYPTION TESTING - OPTION 1: DISABLED
# ================================
# Use this for development/testing with non-sensitive data
# NO ENCRYPTION - Fastest performance

PORT=3000
NODE_ENV=development
DATABASE_URL=mongodb://localhost:27017/medicalrecords

# Encryption: DISABLED
ENCRYPTION_STRATEGY=disabled

# Auth
JWT_SECRET=dev_secret_minimum_32_characters_long_please
JWT_REFRESH_SECRET=dev_refresh_secret_different_from_jwt_secret_32_chars
FRONTEND_URL=http://localhost:3000

# AWS (for S3 only)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
S3_BUCKET_NAME=medical-records-dev

# Redis (for queues and caching)
REDIS_URL=redis://localhost:6379

# SMTP (for emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM="Medical Records <noreply@medicalrecords.com>"
SUPPORT_EMAIL=support@medicalrecords.com

# Features
ENABLE_CSRF=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
